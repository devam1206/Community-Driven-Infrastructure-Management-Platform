# Copy this file to .env and fill the real values. DO NOT commit .env to git.

# Postgres
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpass
POSTGRES_DB=community_monitor
POSTGRES_PORT=5432

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@local.com
PGADMIN_DEFAULT_PASSWORD=admin123

# App database connection (backend reads these)
DB_HOST=postgres
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}
DB_NAME=${POSTGRES_DB}
DB_PORT=${POSTGRES_PORT}

# JWT secret - generate a long random value for production
JWT_SECRET=replace_this_with_a_strong_random_secret

# Cloudinary (for image uploads) - Sign up for free at https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
